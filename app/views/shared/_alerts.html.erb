<% if flash[:alert] %>
	<%= js add_gritter(flash[:alert], title: "Trevor Howard Portfolio", sticky: false, image: :warning) %>
<% elsif flash[:error] %>
	<%= js add_gritter(flash[:error], title: "Trevor Howard Portfolio", sticky: false, image: :error) %>
<% else %>
	<%= js add_gritter(flash[:notice], title: "Trevor Howard Portfolio", sticky: false, image: :success) %>
<% end %>