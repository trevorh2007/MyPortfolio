<%= form_for(@portfolio_item) do |f| %>
  <% if @portfolio_item.errors.any? %>
  <% @portfolio_item.errors.full_messages.each do |error| %>
    <%= js add_gritter(error, title: "Trevor Howard Portfolio", sticky: false, image: :error) %>
  <% end %>
<% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :subtitle %>
        <%= f.text_field :subtitle, class: 'form-control' %>
      </div>

      <div class="form-group">
        <label class="btn btn-primary">
          Upload a main image <%= f.file_field :main_image, style: 'display:none' %>
        </label>
      </div>

      <div class="form-group">
      <label class="btn btn-primary">
        Upload a thumb image <%= f.file_field :thumb_image, style: 'display:none' %>
      </label>
      </div>

    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: 'form-control', rows: 10 %>
      </div>
    </div>
  </div>

  <hr>

  <div class="col-md-12">
    <h4>Technologies Used:</h4>
    <div>
      <%= f.fields_for :technologies do |technology_form| %>
        <%= render 'technology_fields', f: technology_form %>
      <% end %>

      <div>
        <%= link_to_add_association 'Add Technology', f, :technologies, class: 'btn btn-sm btn-info' %>
      </div>
    </div>

    <hr>

    <div class="form-group">
      <%= f.submit 'Submit Changes', class: 'btn btn-primary btn-block' %>
    </div>
  </div>
  <hr>
<% end %>