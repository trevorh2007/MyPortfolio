<div class="col-md-4">
	<div class="card sub-port-img" data-id="<%= portfolio_item.id %>">
	  <%= link_to image_tag(portfolio_img(portfolio_item.thumb_image, 'thumb')), portfolio_show_path(portfolio_item) %>
	  <p class="card-text">
	  	<span id="title-attrib"><%= portfolio_item.title %></span>
	  	<span id="port-subtitle">-<%= portfolio_item.subtitle %></span>
	  	<span id="delete-port"><%= link_to 'Delete', portfolio_path(portfolio_item), method: :delete, data: { confirm: "Delete: #{portfolio_item.title}?", commit: 'Do it!', cancel: 'Not Yet' }, class: "remove-tech btn-sm btn btn-danger" if logged_in?(:site_admin) %></span>
	  </p>
	</div>
</div>