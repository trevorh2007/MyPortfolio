<div class="blog-post">
	<h2 class="blog-post-title"><%= link_to blog.title.capitalize, blog %></h2>
	<p class="blog-post-meta">Published <%= distance_of_time_in_words(blog.created_at, Time.now) %> ago</p>

	<% if logged_in?(:site_admin) %>
		<p class="blog-post-meta">
			<%= link_to blog.status, toggle_status_blog_path(blog), class: 'btn btn-sm btn-primary' %> 
			<%= link_to 'Edit', edit_blog_path(blog), class: 'btn btn-sm btn-primary' %> 
			<%= link_to 'Delete Blog', blog, class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Delete: #{blog.title}?", commit: 'Do it!', cancel: 'Not Yet' } %>
		</p>
	<% end %>

	<p>
		<%= blog.body %>
	</p>
</div>