<div class="col-sm-8 blog-main">
    
  <h2><%= @blog.title %></h2>

  <%= link_to 'Edit Blog', edit_blog_path(@blog), class: 'btn btn-sm btn-warning' if logged_in?(:site_admin) %>

  <p>
  	<%= @blog.body %>
  </p>

  <h5>
  	<%= @blog.notes if logged_in?(:site_admin) %>
  </h5>

  <% unless current_user.is_a? GuestUser %>
  	<%= form_for @comment, url: '#' do |f| %>
  		<div class="form-group">
  			<%= f.label :Leave_a_Comment! %>
  			<%= f.text_area :content, class: 'form-control', placeholder: "Comment here" %>
  		</div>

  		<div id="blog-cmt-btn">
  		<%= f.submit 'Comment', class: 'btn btn-primary' %>
  		</div>
  	<% end %>
  <% end %>

  <%= render @blog.comments %>

</div>